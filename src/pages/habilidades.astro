---
import ImageTooltip from "../components/ImageTooltip";
import Frameworks from "../storage/frameworks.json";
import Languages from "../storage/languages.json";

import "tippy.js/dist/tippy.cjs";
---

<div class="flex flex-col gap-12">
    <div class="flex flex-col items-center gap-12 my-24">
        <div class="text-center dark:text-white">
            <h3 class="font-extrabold opacity-70 text-2xl sm:text-4xl">
                Lenguajes
            </h3>
            <p class="text-lg max-w-md mt-4 opacity-70">
                Lenguajes y tecnologias de las cuales tengo conocimiento.
            </p>
        </div>
        <div class="m-5">
            <ul
                class="max-w-2xl justify-items-center items-center grid gap-12 grid-cols-2 md:gap-3 md:grid-cols-6"
            >
                {
                    Languages.map((item) => (
                    <li class="inline-block">
                            <ImageTooltip
                                image={item.image}
                                name={item.name}
                                client:load
                            />
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
    <div class="flex flex-col items-center gap-12 mb-24">
        <div class="text-center dark:text-white">
            <h3 class="font-extrabold opacity-70 text-2xl sm:text-4xl">
                Frameworks
            </h3>
            <p class="text-lg max-w-md mt-4 opacity-70">
                Frameworks y herramientas de las cuales tengo conocimiento y
                utilizo.
            </p>
        </div>
        <div class="m-5 h-auto">
            <ul
                class="max-w-2xl grid grid-flow-dense justify-items-center items-center gap-12 md:gap-3 grid-cols-2 md:grid-cols-6"
            >
                {
                    Frameworks.map((item) => (
                        <li class="inline-block">
                            <ImageTooltip
                                image={item.image}
                                name={item.name}
                                client:only
                            />
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</div>
<style>
    p {
        font-family: monospace;
    }

</style>
