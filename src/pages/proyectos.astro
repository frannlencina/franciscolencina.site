---
import Card from '../components/Card'

import Data from '../storage/projects.json'

---
<div class="md:py-24 ">
<ul role="list" class="link-card-grid flex flex-col gap-4 items-center sm:max-w-xl sm:mx-auto md:max-w-3xl ">
    
   {
     Data.map(item => (
    <Card
      slug={item.slug}
      title={item.title}
      description={item.description}
      about={item.about}
      techSpecs={item.techSpecs}
      image={item.image}
      website={item.website}
      tech={item.tech}
    />
  ))
   }
</ul>
</div>