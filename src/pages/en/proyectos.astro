---
import Card from "../../components/Card";
import Data from "../../storage/projects-en.json";

---

<div class="md:py-24">
  <ul
    role="list"
    class="link-card-grid flex flex-col items-center sm:max-w-xl sm:mx-auto md:max-w-3xl"
  >
  <li class="link-card flex flex-col items-end w-full gap-y-6">
    {
      Data.map((item) => (
        <Card
          slug={item.slug}
          title={item.title}
          description={item.description}
          about={item.about}
          techSpecs={item.techSpecs}
          image={item.image}
          website={item.website}
          tech={item.tech}
          language={item.language}
          text="Details"
        />
      ))
    }
    </li>
  </ul>
</div>
