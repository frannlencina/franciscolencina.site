---
import Navbar from '../components/Navbar.astro'

export interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<meta name="description" content="Author:Francisco Lencina, Category: Portfolio, Blog. Resume: Este es mi portafolio, donde te voy a mostrar mis habilidades y conocimientos.">
		<meta name="theme-color" content="#317EFB"/>

		<meta property="og:title" content="Francisco Lencina : Portfolio" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://franciscolencina.site" />
		<meta property="og:image" content="https://res.cloudinary.com/dctldwa03/image/upload/v1678214386/yo_dcvotu.png" />
		<meta property="og:image:secure_url" content="https://res.cloudinary.com/dctldwa03/image/upload/v1678214386/yo_dcvotu.png" /> 
		<meta property="og:image:type" content="image/png" /> 
		<meta property="og:image:width" content="400" /> 
		<meta property="og:image:height" content="300" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png"/>
		<link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
		
		<link rel="manifest" href="../../manifest.json">
		<!-- Google Analytics -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-VMWZH9EN3H"
		></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-VMWZH9EN3H");
		</script>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="duration-300">
		<Navbar></Navbar>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Space+Mono&display=swap');
