---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			name="description"
			content="Author:Francisco Lencina, Category: Portfolio, Blog. Resume: Este es mi portafolio, donde te voy a mostrar mis habilidades y conocimientos."
		/>
		<meta name="theme-color" content="#317EFB" />
		<meta property="og:title" content="Francisco Lencina : Portfolio" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://franciscolencina.site" />
		<meta
			property="og:image"
			content="https://res.cloudinary.com/dctldwa03/image/upload/v1678214386/yo_dcvotu.png"
		/>
		<meta
			property="og:image:secure_url"
			content="https://res.cloudinary.com/dctldwa03/image/upload/v1678214386/yo_dcvotu.png"
		/>
		<meta property="og:image:type" content="image/png" />
		<meta property="og:image:width" content="400" />
		<meta property="og:image:height" content="300" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<link
			href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css"
			rel="stylesheet"
		/>

		<link rel="manifest" href="../../manifest.json" />
		<!-- Google Analytics -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-VMWZH9EN3H"
		></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-VMWZH9EN3H");
		</script>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="duration-300">
		<Navbar href="/en/" />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Space+Mono&display=swap");
	@import url("https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap");
	:root {
		--blue: #3450a2;
		--blue-pastel: #5f75b6;
		--blue-dark: #272d40;
		--blue-deep: #141825;
		--black: rgba(46, 46, 46, 1);
		--blue-white: linear-gradient(
			90deg,
			#3450a2 10.77%,
			#cfcfcf 82.04%,
			#ffffff 97.06%
		);
		--white-blue: linear-gradient(
			270.05deg,
			#3450a4 -5.55%,
			#ffffff 110.25%
		);
		--blue-gradient: linear-gradient(
			90deg,
			rgba(52, 80, 164, 1) 0%,
			rgba(46, 46, 46, 1) 20%,
			rgba(46, 46, 46, 1) 60%
		);
		--black-gradient: linear-gradient(
			90deg,
			rgba(46, 46, 46, 1) 0%,
			rgba(52, 80, 164, 1) 10%,
			rgba(52, 80, 164, 1) 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #f6f6f6;
		scroll-behavior: smooth;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
	.dark {
		background-color: #141825;
	}
</style>
<script>
	window.addEventListener("beforeunload", (event) => {
		console.log("Transicion...");
	});
</script>
