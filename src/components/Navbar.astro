---
import emojiMio from "../assets/face-emoji.png";
import DvButton from "./DvButton";
---

<div
    class="Navbar bg-white flex items-center flex-col m-auto sm:flex-row sm:place-content-between max-w-6xl px-7 py-3 rounded-xl"
>
    <div class="">
        <a href="#"
            ><img
                class="hover:scale-110 duration-300"
                src={emojiMio}
                alt=""
                srcset=""
            /></a
        >
    </div>
    <div>
        <DvButton />
    </div>
    <div class="flex gap-2">
        <select name="select">
            <option value="value1" selected>Espa√±ol</option>
            <option value="value2">English</option>
          </select>
        <button class="text-xl"><i class="ri-moon-clear-line"></i></button>
    </div>
    <input type="checkbox" name="" id="check" />
    <label class="flex sm:hidden mb-2 text-lg" id="checkbox" for="check"
        ><i class="ri-menu-3-line px-5"></i></label
    >
</div>
<style>
    #check {
        display: none;
    }

    #checkbox {
        cursor: pointer;
        padding: 5px;
        border-radius: 5px;
    }

    @media only screen and (max-width: 640px) {
        .listaNavbar li {
            position: fixed;
            display: flex;
            flex-direction: column;
            gap: 30px;
            text-align: center;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            width: 100%;
            height: 100vh;
            color: white;
            border-radius: 1000px 0px 0px 1000px;
            background-color: #1c1c1c;
            opacity: 1;
            top: 130px;
            left: 100%;
            z-index: 2;

            transition: all 0.3s ease-in-out;
        }

        #check:checked ~ ul li {
            left: 0;
            border-radius: 40px 40px 0px 0px;
        }

        #check:checked ~ label {
            background-color: #1c1c1c;
            color: white;
            padding: 5px;
            border-radius: 5px;
            transition: 0.3s all ease-in-out;
        }
    }
</style>
