---
import DvButton from "./DvButton";
import ToggleDarkBtn from "./ToggleDarkBtn";

import emojiMio from "../assets/face-emoji.png";
---

<div
    class="Navbar bg-white flex items-center flex-col gap-2 m-auto sm:flex-row sm:place-content-between max-w-6xl px-7 py-3 rounded-xl dark:text-white dark:bg-[#272D40] duration-300"
>
    <div class="">
        <a href="/"
            ><img
                class="hover:scale-110 duration-300"
                src={emojiMio}
                alt=""
                srcset=""
            /></a
        >
    </div>
    <div class="flex items-center gap-2">
        <DvButton />
        <ToggleDarkBtn client:load />
    </div>

</div>
<style>
    #check {
        display: none;
    }

    #checkbox {
        cursor: pointer;
        padding: 5px;
        border-radius: 5px;
    }

    @media only screen and (max-width: 640px) {
        .listaNavbar li {
            position: fixed;
            display: flex;
            flex-direction: column;
            gap: 30px;
            text-align: center;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            width: 100%;
            height: 100vh;
            border-radius: 1000px 0px 0px 1000px;
            background-color: #1c1c1c;
            opacity: 1;
            top: 200px;
            left: 100%;
            z-index: 2;
            transition: all 0.3s ease-in-out;
        }

        #check:checked ~ ul li {
            left: 0;
            border-radius: 40px 40px 0px 0px;
        }

        #check:checked ~ label {
            background-color: #1c1c1c;
            color: white;
            padding: 5px;
            border-radius: 5px;
            transition: 0.3s all ease-in-out;
        }
    }
</style>
